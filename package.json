{
  "name": "zico-messenger-backend",
  "version": "0.0.0",
  "description": "This is a Node.js based backend for ZICO messenger application.",
  "main": "app.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "nodemon dist/app.js --exec \"npm run build-dev\"",
    "start": "npm run build && node dist/app.js",
    "build-dev": "babel-node app.js - dist",
    "build": "babel ./ --ignore node_modules,dist -d ./dist"
  },
  "nodemonConfig": {
    "ignore": [
      "dist/*"
    ]
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mongoose": "^5.9.18"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.2",
    "@babel/node": "^7.10.1",
    "@babel/preset-env": "^7.10.2"
  }
}
